{%- liquid
  assign product = product | default: product_card_product
  assign show_vendor = show_vendor | default: false
  assign show_quick_add = show_quick_add | default: false
  assign show_rating = show_rating | default: true
  assign show_description = show_description | default: true
  assign badge_text = badge_text | default: blank
-%}

{%- if product != blank -%}
  <div class="product-card">
    <a href="{{ product.url }}" class="product-card__link" aria-label="{{ product.title }}">
      <div class="product-card__image-wrapper">
        {%- if product.featured_image != blank -%}
          <img
            src="{{ product.featured_image | image_url: width: 400 }}"
            srcset="{{ product.featured_image | image_url: width: 400 }} 1x, {{ product.featured_image | image_url: width: 800 }} 2x"
            alt="{{ product.featured_image.alt | escape | default: product.title }}"
            class="product-card__image"
            loading="lazy"
            width="400"
            height="{{ 400 | divided_by: product.featured_image.aspect_ratio | round }}"
          >
        {%- else -%}
          <div class="product-card__image-placeholder">
            {{ 'product-1' | placeholder_svg_tag: 'product-card__placeholder' }}
          </div>
        {%- endif -%}

        {%- if badge_text != blank -%}
          <span class="product-card__badge">{{ badge_text }}</span>
        {%- elsif product.compare_at_price > product.price -%}
          <span class="product-card__badge product-card__badge--sale">Sale</span>
        {%- endif -%}
      </div>

      <div class="product-card__info">
        {%- if show_rating -%}
          <div class="product-card__rating">
            <div class="product-card__stars">
              {%- for i in (1..5) -%}
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M8 0L10 6L16 6L11 9L13 15L8 12L3 15L5 9L0 6L6 6L8 0Z" fill="var(--color-gold)"/>
                </svg>
              {%- endfor -%}
            </div>
          </div>
        {%- endif -%}

        <h3 class="product-card__title">{{ product.title }}</h3>

        {%- if show_description and product.description != blank -%}
          <p class="product-card__description">{{ product.description | strip_html | truncate: 80 }}</p>
        {%- endif -%}

        <div class="product-card__footer">
          <div class="product-card__price">
            {% render 'product-price', product: product %}
          </div>
          <a href="{{ product.url }}" class="product-card__view-details">VIEW DETAILS</a>
        </div>
      </div>
    </a>

    {%- if show_quick_add -%}
      <div class="product-card__quick-add">
        {%- if product.available -%}
          {%- if product.variants.size == 1 -%}
            <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data" class="product-card__form">
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              <button type="submit" class="product-card__quick-add-button button" aria-label="Add {{ product.title }} to cart">
                ðŸ›’ Add to cart
              </button>
            </form>
          {%- else -%}
            <a href="{{ product.url }}" class="product-card__quick-add-button button">
              Select options
            </a>
          {%- endif -%}
        {%- else -%}
          <button type="button" class="product-card__quick-add-button button" disabled>
            Sold out
          </button>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
{%- endif -%}

<style>
  .product-card {
    position: relative;
    display: flex;
    flex-direction: column;
    background: rgba(31, 41, 55, 0.6);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.1);
    transition: all var(--transition-base);
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .product-card:hover {
    transform: translateY(-8px) scale(1.02);
    border-color: var(--color-gold);
    box-shadow: var(--shadow-2xl), 0 0 40px rgba(255, 215, 0, 0.3);
    background: rgba(31, 41, 55, 0.8);
  }

  .product-card:hover::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--gradient-primary);
    animation: slideIn 0.3s ease-out;
  }

  .product-card__link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .product-card__image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background: linear-gradient(135deg, var(--color-gray-800) 0%, var(--color-gray-900) 100%);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    margin-bottom: var(--spacing-4);
    transition: all var(--transition-base);
  }

  .product-card:hover .product-card__image-wrapper {
    border-color: var(--color-gold);
    box-shadow: var(--shadow-lg), 0 0 30px rgba(255, 215, 0, 0.3);
  }

  .product-card:hover .product-card__image-wrapper::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 215, 0, 0.1) 0%, rgba(255, 215, 0, 0.05) 100%);
    z-index: 1;
    pointer-events: none;
  }

  .product-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
    z-index: 0;
  }

  .product-card:hover .product-card__image {
    transform: scale(1.08);
  }

  .product-card__image-placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-gridiron-black);
  }

  .product-card__placeholder {
    width: 100%;
    height: 100%;
    opacity: 0.3;
  }

  .product-card__badge {
    position: absolute;
    top: var(--spacing-4);
    right: var(--spacing-4);
    padding: var(--spacing-2) var(--spacing-4);
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    background: var(--gradient-primary);
    color: var(--color-gray-900);
    border-radius: var(--radius-full);
    z-index: 3;
    box-shadow: var(--shadow-lg), 0 0 20px rgba(255, 215, 0, 0.5);
    text-transform: uppercase;
    border: 2px solid var(--color-gray-900);
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  .product-card__info {
    display: flex;
    flex-direction: column;
    flex: 1;
    padding: var(--spacing-4);
    position: relative;
    z-index: 1;
    gap: var(--spacing-3);
  }

  .product-card__vendor {
    font-size: 0.875rem;
    color: var(--color-gray-300);
    margin: 0 0 var(--spacing-2) 0;
    letter-spacing: -0.01em;
    font-weight: 500;
  }

  .product-card__rating {
    margin-bottom: var(--spacing-2);
  }

  .product-card__stars {
    display: flex;
    gap: 2px;
  }

  .product-card__title {
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    font-weight: 600;
    color: var(--color-white);
    margin: 0;
    line-height: 1.4;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-card__description {
    font-size: var(--font-size-sm);
    color: var(--color-gray-300);
    line-height: 1.5;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-card__footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
    padding-top: var(--spacing-4);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    gap: var(--spacing-4);
  }

  .product-card__price {
    flex: 1;
  }

  .product-card__price .product-price__current {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-gold);
  }

  .product-card__view-details {
    font-size: var(--font-size-xs);
    font-weight: 600;
    color: var(--color-gold);
    text-decoration: none;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    transition: color var(--transition-fast);
  }

  .product-card__view-details:hover {
    color: var(--color-gold-light);
  }

  .product-card__quick-add {
    position: absolute;
    bottom: var(--spacing-4);
    left: var(--spacing-4);
    right: var(--spacing-4);
    opacity: 0;
    transform: translateY(10px);
    transition: all var(--transition-base);
    z-index: 2;
    pointer-events: none;
  }

  .product-card:hover .product-card__quick-add {
    opacity: 1;
    transform: translateY(0);
    pointer-events: all;
  }

  .product-card__quick-add-button {
    width: 100%;
    padding: var(--spacing-4) var(--spacing-5);
    font-size: 0.9375rem;
    border-radius: var(--radius-lg);
    font-weight: 600;
    background: var(--gradient-primary);
    color: var(--color-gray-900);
    border: 2px solid var(--color-gray-900);
    box-shadow: var(--shadow-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-2);
  }

  .product-card__quick-add-button::before {
    content: 'ðŸ›’';
    font-size: 1.125rem;
  }

  .product-card__form {
    width: 100%;
  }
</style>

