{%- liquid
  assign product = product | default: product_card_product
  assign current_variant = product.selected_or_first_available_variant
  assign picker_type = block.settings.picker_type | default: 'button'
  assign show_quantity = show_quantity | default: true
-%}

<product-form class="product-form" data-product-id="{{ product.id }}">
  {%- form 'product', product, id: 'product-form', class: 'product-form__form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
    <input type="hidden" name="id" value="{{ current_variant.id }}" data-variant-id>

    {%- if product.variants.size > 1 -%}
      <div class="product-form__variants">
        {%- for option in product.options_with_values -%}
          <div class="product-form__option">
            <label class="product-form__option-label" for="Option-{{ section.id }}-{{ forloop.index0 }}">
              {{ option.name }}
            </label>

            {%- if picker_type == 'dropdown' -%}
              <select
                id="Option-{{ section.id }}-{{ forloop.index0 }}"
                name="options[{{ option.name | escape }}]"
                class="product-form__option-select"
                data-option-select
              >
                {%- for value in option.values -%}
                  <option value="{{ value | escape }}" {% if option.selected_value == value %}selected{% endif %}>
                    {{ value }}
                  </option>
                {%- endfor -%}
              </select>
            {%- else -%}
              <div class="product-form__option-buttons" role="listbox" aria-label="{{ option.name }}">
                {%- for value in option.values -%}
                  <button
                    type="button"
                    class="product-form__option-button {% if option.selected_value == value %}product-form__option-button--selected{% endif %}"
                    data-option-value="{{ value | escape }}"
                    data-option-name="{{ option.name | escape }}"
                    role="option"
                    aria-selected="{% if option.selected_value == value %}true{% else %}false{% endif %}"
                  >
                    {{ value }}
                  </button>
                {%- endfor -%}
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- if show_quantity -%}
      <div class="product-form__quantity">
        <label for="Quantity-{{ section.id }}" class="product-form__quantity-label">
          Quantity
        </label>
        <div class="product-form__quantity-selector">
          <button type="button" class="product-form__quantity-button" data-quantity-decrease aria-label="Decrease quantity">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3 8H13" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
          <input
            type="number"
            id="Quantity-{{ section.id }}"
            name="quantity"
            value="1"
            min="1"
            class="product-form__quantity-input"
            data-quantity-input
          >
          <button type="button" class="product-form__quantity-button" data-quantity-increase aria-label="Increase quantity">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M8 3V13M8 13L3 8M8 13L13 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>
      </div>
    {%- endif -%}

    <div class="product-form__submit-wrapper">
      <button
        type="submit"
        name="add"
        class="product-form__submit button"
        {% unless current_variant.available %}disabled{% endunless %}
        data-add-to-cart
      >
        <span data-add-to-cart-text>
          {%- if current_variant.available -%}
            Add to cart
          {%- else -%}
            Sold out
          {%- endif -%}
        </span>
        <span class="product-form__submit-loading" data-loading hidden>
          Adding...
        </span>
      </button>

      {%- if block.settings.show_dynamic_checkout and current_variant.available -%}
        {{ form | payment_button }}
      {%- endif -%}
    </div>

    <div class="product-form__error-message" role="alert" data-error-message hidden></div>
  {%- endform -%}
</product-form>

<style>
  .product-form {
    width: 100%;
  }

  .product-form__variants {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
  }

  .product-form__option {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .product-form__option-label {
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-championship-white);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .product-form__option-select {
    width: 100%;
    padding: var(--spacing-sm);
    font-size: 1rem;
    background-color: transparent;
    border: 1px solid var(--color-chrome-silver);
    color: var(--color-championship-white);
    cursor: pointer;
  }

  .product-form__option-select:focus {
    border-color: var(--color-victory-red);
    outline: none;
  }

  .product-form__option-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .product-form__option-button {
    padding: var(--spacing-sm) var(--spacing-md);
    font-size: 0.9375rem;
    font-weight: 500;
    background-color: transparent;
    border: 1px solid var(--color-chrome-silver);
    color: var(--color-championship-white);
    cursor: pointer;
    transition: all var(--transition-base);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .product-form__option-button:hover {
    border-color: var(--color-victory-red);
    color: var(--color-victory-red);
  }

  .product-form__option-button--selected {
    background-color: var(--color-victory-red);
    border-color: var(--color-victory-red);
    color: var(--color-championship-white);
  }

  .product-form__option-button:focus-visible {
    outline: 2px solid var(--color-victory-red);
    outline-offset: 2px;
  }

  .product-form__quantity {
    margin-bottom: var(--spacing-md);
  }

  .product-form__quantity-label {
    display: block;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-championship-white);
    margin-bottom: var(--spacing-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .product-form__quantity-selector {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    max-width: 150px;
  }

  .product-form__quantity-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    padding: 0;
    background-color: transparent;
    border: 1px solid var(--color-chrome-silver);
    color: var(--color-championship-white);
    cursor: pointer;
    transition: all var(--transition-base);
  }

  .product-form__quantity-button:hover {
    border-color: var(--color-victory-red);
    color: var(--color-victory-red);
  }

  .product-form__quantity-button:focus-visible {
    outline: 2px solid var(--color-victory-red);
    outline-offset: 2px;
  }

  .product-form__quantity-input {
    flex: 1;
    text-align: center;
    padding: var(--spacing-sm);
    font-size: 1rem;
    font-weight: 600;
    background-color: transparent;
    border: 1px solid var(--color-chrome-silver);
    color: var(--color-championship-white);
    -moz-appearance: textfield;
  }

  .product-form__quantity-input::-webkit-outer-spin-button,
  .product-form__quantity-input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  .product-form__submit-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-md);
  }

  .product-form__submit {
    width: 100%;
    padding: var(--spacing-md) var(--spacing-xl);
    font-size: 1.125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .product-form__submit:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .product-form__submit-loading {
    display: inline-block;
  }

  .product-form__error-message {
    margin-top: var(--spacing-sm);
    padding: var(--spacing-sm);
    background-color: rgba(225, 8, 36, 0.1);
    border: 1px solid var(--color-victory-red);
    color: var(--color-victory-red);
    font-size: 0.875rem;
  }

  .shopify-payment-button {
    margin-top: var(--spacing-sm);
  }

  .shopify-payment-button__button {
    background-color: transparent !important;
    border: 2px solid var(--color-victory-red) !important;
    color: var(--color-championship-white) !important;
  }

  .shopify-payment-button__button:hover {
    background-color: var(--color-victory-red) !important;
    color: var(--color-championship-white) !important;
  }
</style>

<script>
  class ProductForm extends HTMLElement {
    constructor() {
      super();
      this.form = this.querySelector('form');
      this.variantInput = this.querySelector('[data-variant-id]');
      this.submitButton = this.querySelector('[data-add-to-cart]');
      this.submitText = this.querySelector('[data-add-to-cart-text]');
      this.loadingText = this.querySelector('[data-loading]');
      this.errorMessage = this.querySelector('[data-error-message]');
      this.productData = JSON.parse(document.querySelector('[data-product-json]')?.textContent || '{}');
      
      this.init();
    }

    init() {
      // Variant selection
      const optionButtons = this.querySelectorAll('[data-option-value]');
      const optionSelects = this.querySelectorAll('[data-option-select]');

      optionButtons.forEach(button => {
        button.addEventListener('click', () => {
          const optionName = button.dataset.optionName;
          const optionValue = button.dataset.optionValue;
          
          // Update button states
          this.querySelectorAll(`[data-option-name="${optionName}"]`).forEach(btn => {
            btn.classList.remove('product-form__option-button--selected');
            btn.setAttribute('aria-selected', 'false');
          });
          button.classList.add('product-form__option-button--selected');
          button.setAttribute('aria-selected', 'true');
          
          this.updateVariant();
        });
      });

      optionSelects.forEach(select => {
        select.addEventListener('change', () => {
          this.updateVariant();
        });
      });

      // Quantity controls
      const quantityDecrease = this.querySelector('[data-quantity-decrease]');
      const quantityIncrease = this.querySelector('[data-quantity-increase]');
      const quantityInput = this.querySelector('[data-quantity-input]');

      if (quantityDecrease && quantityInput) {
        quantityDecrease.addEventListener('click', () => {
          const currentValue = parseInt(quantityInput.value) || 1;
          if (currentValue > 1) {
            quantityInput.value = currentValue - 1;
          }
        });
      }

      if (quantityIncrease && quantityInput) {
        quantityIncrease.addEventListener('click', () => {
          const currentValue = parseInt(quantityInput.value) || 1;
          quantityInput.value = currentValue + 1;
        });
      }

      // Form submission
      if (this.form) {
        this.form.addEventListener('submit', this.handleSubmit.bind(this));
      }
    }

    updateVariant() {
      const selectedOptions = {};
      
      // Get selected options from buttons
      this.querySelectorAll('.product-form__option-button--selected').forEach(button => {
        const name = button.dataset.optionName;
        const value = button.dataset.optionValue;
        if (name && value) {
          selectedOptions[name] = value;
        }
      });

      // Get selected options from selects
      this.querySelectorAll('[data-option-select]').forEach(select => {
        const name = select.name.replace('options[', '').replace(']', '');
        selectedOptions[name] = select.value;
      });

      // Find matching variant
      const variant = this.productData.variants?.find(v => {
        return v.options.every((option, index) => {
          const optionName = this.productData.options[index];
          return selectedOptions[optionName] === option;
        });
      });

      if (variant) {
        this.variantInput.value = variant.id;
        this.updateButtonState(variant);
        this.updateMedia(variant);
      }
    }

    updateButtonState(variant) {
      if (!this.submitButton || !this.submitText) return;

      if (variant.available) {
        this.submitButton.disabled = false;
        this.submitText.textContent = 'Add to cart';
      } else {
        this.submitButton.disabled = true;
        this.submitText.textContent = 'Sold out';
      }
    }

    updateMedia(variant) {
      if (!variant.featured_media) return;
      
      const mediaItems = document.querySelectorAll('[data-media-id]');
      const thumbs = document.querySelectorAll('[data-thumb-index]');
      
      mediaItems.forEach((item, index) => {
        if (item.dataset.mediaId == variant.featured_media.id) {
          // Activate this media
          document.querySelectorAll('[data-media-id]').forEach(i => i.classList.remove('product-media__item--active'));
          item.classList.add('product-media__item--active');
          
          // Activate corresponding thumb
          if (thumbs[index]) {
            thumbs.forEach(t => t.classList.remove('product-media__thumb--active'));
            thumbs[index].classList.add('product-media__thumb--active');
          }
        }
      });
    }

    async handleSubmit(e) {
      e.preventDefault();
      
      if (!this.submitButton || this.submitButton.disabled) return;

      this.setLoadingState(true);
      this.hideError();

      const formData = new FormData(this.form);
      
      try {
        const response = await fetch(window.routes.cart_add_url, {
          method: 'POST',
          body: formData
        });

        const data = await response.json();

        if (data.error) {
          this.showError(data.description || 'There was an error adding the product to your cart.');
        } else {
          // Update cart count
          this.updateCartCount();
          // Trigger cart drawer or redirect (you can customize this)
          window.dispatchEvent(new CustomEvent('cart:updated'));
        }
      } catch (error) {
        this.showError('There was an error adding the product to your cart. Please try again.');
      } finally {
        this.setLoadingState(false);
      }
    }

    setLoadingState(loading) {
      if (!this.submitButton || !this.submitText || !this.loadingText) return;

      if (loading) {
        this.submitButton.disabled = true;
        this.submitText.hidden = true;
        this.loadingText.hidden = false;
      } else {
        this.submitButton.disabled = false;
        this.submitText.hidden = false;
        this.loadingText.hidden = true;
      }
    }

    showError(message) {
      if (this.errorMessage) {
        this.errorMessage.textContent = message;
        this.errorMessage.hidden = false;
      }
    }

    hideError() {
      if (this.errorMessage) {
        this.errorMessage.hidden = true;
      }
    }

    updateCartCount() {
      fetch(window.routes.cart_url + '.js')
        .then(response => response.json())
        .then(cart => {
          const cartCount = document.querySelector('[data-cart-count]');
          if (cartCount) {
            cartCount.textContent = cart.item_count > 0 ? cart.item_count : '';
          }
        })
        .catch(() => {});
    }
  }

  customElements.define('product-form', ProductForm);
</script>

