{%- liquid
  assign premium_badge = section.settings.premium_badge | default: 'PREMIUM BRANDING'
  assign heading_part1 = section.settings.heading_part1 | default: 'ELITE SPORTS'
  assign heading_part2 = section.settings.heading_part2 | default: 'DECALS & BRANDING'
  assign subheading = section.settings.subheading
  assign button1_label = section.settings.button1_label | default: 'SHOP COLLECTIONS'
  assign button1_link = section.settings.button1_link | default: routes.all_products_collection_url
  assign button2_label = section.settings.button2_label | default: 'CUSTOM DESIGN SERVICE'
  assign button2_link = section.settings.button2_link
  assign background_image = section.settings.background_image
  assign overlay_opacity = section.settings.overlay_opacity | divided_by: 100.0
-%}

<section class="hero" {% if background_image != blank %}style="background-image: url('{{ background_image | image_url: width: 1920 }}');"{% endif %}>
  <div class="hero__overlay" style="opacity: {{ overlay_opacity }};"></div>
  <div class="container">
    <div class="hero__content">
      {%- if premium_badge != blank -%}
        <div class="hero__badge">{{ premium_badge }}</div>
      {%- endif -%}
      
      <h1 class="hero__heading">
        <span class="hero__heading-white">{{ heading_part1 }}</span>
        <span class="hero__heading-gold">{{ heading_part2 }}</span>
      </h1>
      
      {%- if subheading != blank -%}
        <p class="hero__subheading">{{ subheading }}</p>
      {%- endif -%}
      
      <div class="hero__buttons">
        {%- if button1_label != blank -%}
          <a href="{{ button1_link }}" class="hero__button hero__button--primary">
            {{ button1_label }}
          </a>
        {%- endif -%}
        {%- if button2_label != blank -%}
          <a href="{{ button2_link }}" class="hero__button hero__button--secondary">
            {{ button2_label }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-gray-900);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: var(--spacing-16) var(--spacing-5);
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(ellipse at center, rgba(13, 148, 136, 0.15) 0%, transparent 70%);
    z-index: 1;
  }

  @media (min-width: 768px) {
    .hero {
      min-height: 100vh;
      padding: var(--spacing-24) var(--spacing-8);
    }
  }

  @media (min-width: 1024px) {
    .hero {
      padding: var(--spacing-32) var(--spacing-12);
    }
  }

  .hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180deg, rgba(17, 24, 39, 0.4) 0%, rgba(17, 24, 39, 0.9) 100%);
    z-index: 1;
  }

  .hero__content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
    animation: fadeIn 1s ease-out;
  }

  .hero__badge {
    display: inline-block;
    padding: var(--spacing-2) var(--spacing-4);
    font-size: var(--font-size-sm);
    font-weight: 600;
    letter-spacing: 0.1em;
    color: var(--color-gray-900);
    background: var(--gradient-primary);
    border: 2px solid var(--color-gray-900);
    border-radius: var(--radius-md);
    margin-bottom: var(--spacing-6);
    text-transform: uppercase;
  }

  .hero__heading {
    font-family: var(--font-heading);
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 800;
    letter-spacing: -0.02em;
    margin-bottom: var(--spacing-6);
    line-height: 1.1;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
  }

  .hero__heading-white {
    color: var(--color-white);
  }

  .hero__heading-gold {
    background: var(--gradient-gold-text);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
    display: inline-block;
  }

  .hero__heading-gold::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 100%;
    height: 4px;
    background: var(--gradient-primary);
    border-radius: var(--radius-full);
  }

  .hero__subheading {
    font-family: var(--font-body);
    font-size: clamp(1rem, 2vw, 1.25rem);
    font-weight: 400;
    color: var(--color-white);
    margin-bottom: var(--spacing-8);
    line-height: 1.6;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero__buttons {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
    align-items: center;
  }

  @media (min-width: 640px) {
    .hero__buttons {
      flex-direction: row;
      justify-content: center;
    }
  }

  .hero__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-4) var(--spacing-8);
    font-size: var(--font-size-base);
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
    text-decoration: none;
    min-width: 200px;
  }

  .hero__button--primary {
    background: var(--gradient-primary);
    color: var(--color-gray-900);
    border: 2px solid var(--color-gray-900);
    box-shadow: var(--shadow-lg);
  }

  .hero__button--primary:hover {
    background: var(--gradient-primary-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-xl);
  }

  .hero__button--secondary {
    background: transparent;
    color: var(--color-white);
    border: 2px solid var(--color-gold);
  }

  .hero__button--secondary:hover {
    background: var(--color-gold);
    color: var(--color-gray-900);
    transform: translateY(-2px);
  }
</style>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "section-hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image",
      "info": "Recommended size: 1920x700px"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 90,
      "step": 5,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 40,
      "info": "Controls the darkness of the overlay on the background image"
    },
    {
      "type": "text",
      "id": "premium_badge",
      "label": "Premium badge text",
      "default": "PREMIUM BRANDING"
    },
    {
      "type": "text",
      "id": "heading_part1",
      "label": "Heading part 1 (white)",
      "default": "ELITE SPORTS"
    },
    {
      "type": "text",
      "id": "heading_part2",
      "label": "Heading part 2 (gold)",
      "default": "DECALS & BRANDING"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Championship-grade helmet decals, vehicle wraps, and custom branding solutions. Built for teams that demand excellence."
    },
    {
      "type": "text",
      "id": "button1_label",
      "label": "Primary button label",
      "default": "SHOP COLLECTIONS"
    },
    {
      "type": "url",
      "id": "button1_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "button2_label",
      "label": "Secondary button label",
      "default": "CUSTOM DESIGN SERVICE"
    },
    {
      "type": "url",
      "id": "button2_link",
      "label": "Secondary button link"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}

