{%- liquid
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign button_label = section.settings.button_label
  assign button_link = section.settings.button_link | default: routes.all_products_collection_url
  assign background_image = section.settings.background_image
  assign overlay_opacity = section.settings.overlay_opacity | divided_by: 100.0
-%}

<section class="hero" {% if background_image != blank %}style="background-image: url('{{ background_image | image_url: width: 1920 }}');"{% endif %}>
  <div class="hero__overlay" style="opacity: {{ overlay_opacity }};"></div>
  <div class="container">
    <div class="hero__content">
      {%- if heading != blank -%}
        <h1 class="hero__heading">{{ heading }}</h1>
      {%- endif -%}
      {%- if subheading != blank -%}
        <p class="hero__subheading">{{ subheading }}</p>
      {%- endif -%}
      {%- if button_label != blank -%}
        <a href="{{ button_link }}" class="hero__button button">
          {{ button_label }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-gridiron-black);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: var(--spacing-2xl) var(--spacing-md);
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .hero {
      min-height: 600px;
    }
  }

  @media (min-width: 1024px) {
    .hero {
      min-height: 700px;
    }
  }

  .hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: var(--color-gridiron-black);
    z-index: 1;
  }

  .hero__content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero__heading {
    font-family: var(--font-heading);
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 400;
    color: var(--color-championship-white);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--spacing-md);
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    line-height: 1.1;
  }

  .hero__subheading {
    font-family: var(--font-body);
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    font-weight: 400;
    color: var(--color-championship-white);
    margin-bottom: var(--spacing-lg);
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    line-height: 1.5;
  }

  .hero__button {
    display: inline-block;
    padding: var(--spacing-md) var(--spacing-xl);
    font-size: 1.125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    background-color: var(--color-victory-red);
    border-color: var(--color-victory-red);
    color: var(--color-championship-white);
    transition: all var(--transition-base);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
  }

  .hero__button:hover {
    background-color: transparent;
    color: var(--color-victory-red);
    border-color: var(--color-victory-red);
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(225, 8, 36, 0.4);
  }

  .hero__button:active {
    transform: translateY(0);
  }
</style>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "section-hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image",
      "info": "Recommended size: 1920x700px"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 90,
      "step": 5,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 40,
      "info": "Controls the darkness of the overlay on the background image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to SportsLiveDecals"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Custom helmet decals and team branding"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}

