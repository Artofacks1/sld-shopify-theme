{%- liquid
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign button_label = section.settings.button_label
  assign button_link = section.settings.button_link | default: routes.all_products_collection_url
  assign background_image = section.settings.background_image
  assign overlay_opacity = section.settings.overlay_opacity | divided_by: 100.0
-%}

<section class="hero" {% if background_image != blank %}style="background-image: url('{{ background_image | image_url: width: 1920 }}');"{% endif %}>
  <div class="hero__overlay" style="opacity: {{ overlay_opacity }};"></div>
  <div class="container">
    <div class="hero__content">
      {%- if heading != blank -%}
        <h1 class="hero__heading">{{ heading }}</h1>
      {%- endif -%}
      {%- if subheading != blank -%}
        <p class="hero__subheading">{{ subheading }}</p>
      {%- endif -%}
      {%- if button_label != blank -%}
        <a href="{{ button_link }}" class="hero__button button">
          {{ button_label }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-gray-900);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: var(--spacing-16) var(--spacing-5);
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(ellipse at center, rgba(13, 148, 136, 0.15) 0%, transparent 70%);
    z-index: 1;
  }

  @media (min-width: 768px) {
    .hero {
      min-height: 100vh;
      padding: var(--spacing-24) var(--spacing-8);
    }
  }

  @media (min-width: 1024px) {
    .hero {
      padding: var(--spacing-32) var(--spacing-12);
    }
  }

  .hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180deg, rgba(17, 24, 39, 0.4) 0%, rgba(17, 24, 39, 0.9) 100%);
    z-index: 1;
  }

  .hero__content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
    animation: fadeIn 1s ease-out;
  }

  .hero__heading {
    font-family: var(--font-heading);
    font-size: clamp(3.5rem, 10vw, 7rem);
    font-weight: 800;
    letter-spacing: -0.05em;
    margin-bottom: var(--spacing-8);
    line-height: 1;
    color: var(--color-white);
  }

  .hero__heading .gold-text {
    background: var(--gradient-gold-text);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
  }

  .hero__heading .gold-text::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 100%;
    height: 4px;
    background: var(--gradient-primary);
    border-radius: var(--radius-full);
  }

  .hero__subheading {
    font-family: var(--font-body);
    font-size: clamp(1.25rem, 3vw, 2rem);
    font-weight: 400;
    color: var(--color-gray-300);
    margin-bottom: var(--spacing-12);
    line-height: 1.7;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero__button {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-3);
    padding: var(--spacing-5) var(--spacing-12);
    font-size: 1.25rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    background: var(--gradient-primary);
    border: none;
    color: var(--color-white);
    border-radius: var(--radius-xl);
    transition: all var(--transition-base);
    box-shadow: var(--shadow-2xl), var(--shadow-glow-lg);
    position: relative;
    overflow: hidden;
  }

  .hero__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left var(--transition-slow);
  }

  .hero__button:hover::before {
    left: 100%;
  }

  .hero__button:hover {
    background: var(--gradient-primary-hover);
    transform: translateY(-3px) scale(1.03);
    box-shadow: var(--shadow-2xl), var(--shadow-glow-lg);
  }

  .hero__button:active {
    transform: translateY(-1px) scale(1.01);
  }
</style>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "section-hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image",
      "info": "Recommended size: 1920x700px"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 90,
      "step": 5,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 40,
      "info": "Controls the darkness of the overlay on the background image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to SportsLiveDecals"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Custom helmet decals and team branding"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}

