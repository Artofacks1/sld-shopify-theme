{%- liquid
  assign heading = section.settings.heading | default: 'NEXT-LEVEL DECALS & CHAMPIONSHIP-GRADE TROPHIES'
  assign subheading = section.settings.subheading | default: 'High-quality graphics and award designs for sports, business, events, and creative projects.'
  assign button1_label = section.settings.button1_label | default: 'SHOP COLLECTIONS'
  assign button1_link = section.settings.button1_link | default: routes.all_products_collection_url
  assign button2_label = section.settings.button2_label | default: 'CUSTOM DESIGN SERVICE'
  assign button2_link = section.settings.button2_link
  assign background_image = section.settings.background_image
  assign overlay_opacity = section.settings.overlay_opacity | divided_by: 100.0
-%}

<section class="hero" {% if background_image != blank %}style="background-image: url('{{ background_image | image_url: width: 1920 }}');"{% endif %}>
  <div class="hero__overlay" style="opacity: {{ overlay_opacity }};"></div>
  <div class="container">
    <div class="hero__content">
      <h1 class="hero__heading">{{ heading }}</h1>
      
      {%- if subheading != blank -%}
        <p class="hero__subheading">{{ subheading }}</p>
      {%- endif -%}
      
      <div class="hero__buttons">
        {%- if button1_label != blank -%}
          <a href="{{ button1_link }}" class="hero__button hero__button--primary">
            {{ button1_label }}
          </a>
        {%- endif -%}
        {%- if button2_label != blank -%}
          <a href="{{ button2_link }}" class="hero__button hero__button--secondary">
            {{ button2_label }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-gray-900);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: var(--spacing-16) var(--spacing-5);
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(ellipse at center, rgba(13, 148, 136, 0.15) 0%, transparent 70%);
    z-index: 1;
  }

  @media (min-width: 768px) {
    .hero {
      min-height: 100vh;
      padding: var(--spacing-24) var(--spacing-8);
    }
  }

  @media (min-width: 1024px) {
    .hero {
      padding: var(--spacing-32) var(--spacing-12);
    }
  }

  .hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180deg, rgba(17, 24, 39, 0.4) 0%, rgba(17, 24, 39, 0.9) 100%);
    z-index: 1;
  }

  .hero__content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
    animation: fadeIn 1s ease-out;
  }

  .hero__heading {
    font-family: var(--font-heading);
    font-size: clamp(2.5rem, 7vw, 5.5rem);
    font-weight: 800;
    letter-spacing: -0.02em;
    margin-bottom: var(--spacing-6);
    line-height: 1.2;
    color: var(--color-white);
    text-align: center;
  }

  .hero__subheading {
    font-family: var(--font-body);
    font-size: clamp(1rem, 2vw, 1.25rem);
    font-weight: 400;
    color: var(--color-white);
    margin-bottom: var(--spacing-8);
    line-height: 1.6;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero__buttons {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
    align-items: center;
  }

  @media (min-width: 640px) {
    .hero__buttons {
      flex-direction: row;
      justify-content: center;
    }
  }

  .hero__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-4) var(--spacing-8);
    font-size: var(--font-size-base);
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
    text-decoration: none;
    min-width: 200px;
  }

  .hero__button--primary {
    background: var(--gradient-primary);
    color: var(--color-gray-900);
    border: 2px solid var(--color-gray-900);
    box-shadow: var(--shadow-lg);
  }

  .hero__button--primary:hover {
    background: var(--gradient-primary-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-xl);
  }

  .hero__button--secondary {
    background: transparent;
    color: var(--color-white);
    border: 2px solid var(--color-gold);
  }

  .hero__button--secondary:hover {
    background: var(--color-gold);
    color: var(--color-gray-900);
    transform: translateY(-2px);
  }
</style>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "section-hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image",
      "info": "Recommended size: 1920x700px"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 90,
      "step": 5,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 40,
      "info": "Controls the darkness of the overlay on the background image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "NEXT-LEVEL DECALS & CHAMPIONSHIP-GRADE TROPHIES"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "High-quality graphics and award designs for sports, business, events, and creative projects."
    },
    {
      "type": "text",
      "id": "button1_label",
      "label": "Primary button label",
      "default": "SHOP COLLECTIONS"
    },
    {
      "type": "url",
      "id": "button1_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "button2_label",
      "label": "Secondary button label",
      "default": "CUSTOM DESIGN SERVICE"
    },
    {
      "type": "url",
      "id": "button2_link",
      "label": "Secondary button link"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}

