{%- liquid
  assign heading = section.settings.heading | default: 'Why Choose Us'
-%}

<section class="features section">
  <div class="container">
    <div class="features__grid">
      {%- for block in section.blocks -%}
        <div class="features__item" {{ block.shopify_attributes }}>
          <div class="features__icon">
            {%- if block.settings.icon == 'shipping' -%}
              <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M4 12H16V28H4V12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M16 12H32L36 20H16V12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M16 20H36V32H16V20Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M20 36C22.2091 36 24 34.2091 24 32C24 29.7909 22.2091 28 20 28C17.7909 28 16 29.7909 16 32C16 34.2091 17.7909 36 20 36Z" stroke="currentColor" stroke-width="2"/>
                <path d="M32 36C34.2091 36 36 34.2091 36 32C36 29.7909 34.2091 28 32 28C29.7909 28 28 29.7909 28 32C28 34.2091 29.7909 36 32 36Z" stroke="currentColor" stroke-width="2"/>
              </svg>
            {%- elsif block.settings.icon == 'quality' -%}
              <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M24 4L28 18L42 18L30 26L34 40L24 32L14 40L18 26L6 18L20 18L24 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            {%- elsif block.settings.icon == 'design' -%}
              <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 36L20 28L28 36L36 28L40 32V44H8V32L12 36Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M24 4V12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <path d="M24 12L28 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M12 24L8 20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M36 24L40 20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            {%- elsif block.settings.icon == 'support' -%}
              <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M24 4C14 4 6 12 6 22C6 28 10 33 16 36V44H32V36C38 33 42 28 42 22C42 12 34 4 24 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M24 28C26.2091 28 28 26.2091 28 24C28 21.7909 26.2091 20 24 20C21.7909 20 20 21.7909 20 24C20 26.2091 21.7909 28 24 28Z" stroke="currentColor" stroke-width="2"/>
              </svg>
            {%- endif -%}
          </div>
          <h3 class="features__title">{{ block.settings.title }}</h3>
          <p class="features__description">{{ block.settings.description }}</p>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .features {
    padding: var(--spacing-12) 0;
  }

  @media (min-width: 768px) {
    .features {
      padding: var(--spacing-16) 0;
    }
  }

  .features__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-8);
  }

  @media (min-width: 640px) {
    .features__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .features__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .features__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--spacing-6);
    background: rgba(31, 41, 55, 0.4);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-xl);
    transition: all var(--transition-base);
  }

  .features__item:hover {
    border-color: var(--color-gold);
    background: rgba(31, 41, 55, 0.6);
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .features__icon {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-gold);
    margin-bottom: var(--spacing-4);
  }

  .features__title {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-white);
    margin: 0 0 var(--spacing-2) 0;
    letter-spacing: -0.01em;
  }

  .features__description {
    font-size: var(--font-size-sm);
    color: var(--color-gray-300);
    line-height: 1.6;
    margin: 0;
  }
</style>

{% schema %}
{
  "name": "Features",
  "tag": "section",
  "class": "section-features",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Choose Us"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "shipping",
              "label": "Shipping"
            },
            {
              "value": "quality",
              "label": "Quality"
            },
            {
              "value": "design",
              "label": "Design"
            },
            {
              "value": "support",
              "label": "Support"
            }
          ],
          "default": "shipping"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Free Shipping"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "FREE SHIPPING ON ORDERS OVER $500"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "shipping",
            "title": "Free Shipping",
            "description": "ON ORDERS OVER $200"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "quality",
            "title": "Premium Quality",
            "description": "5-YEAR DURABILITY GUARANTEE"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "design",
            "title": "Custom Design",
            "description": "FREE DESIGN CONSULTATION"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "support",
            "title": "Expert Support",
            "description": "24/7 CUSTOMER SERVICE"
          }
        }
      ]
    }
  ]
}
{% endschema %}

