<section class="main-404 section">
  <div class="container">
    <div class="main-404__content">
      <h1 class="main-404__title">404</h1>
      <h2 class="main-404__heading">Page not found</h2>
      <p class="main-404__text">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <div class="main-404__actions">
        <a href="{{ routes.root_url }}" class="main-404__button button">
          Go to homepage
        </a>
        <a href="{{ routes.all_products_collection_url }}" class="main-404__button button button--secondary">
          Continue shopping
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .main-404 {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-2xl) 0;
  }

  .main-404__content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .main-404__title {
    font-family: var(--font-heading);
    font-size: clamp(6rem, 15vw, 10rem);
    color: var(--color-victory-red);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0;
    line-height: 1;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .main-404__heading {
    font-family: var(--font-heading);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    color: var(--color-championship-white);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: var(--spacing-md) 0 var(--spacing-lg) 0;
  }

  .main-404__text {
    font-size: 1.125rem;
    color: var(--color-chrome-silver);
    margin: 0 0 var(--spacing-xl) 0;
    line-height: 1.6;
  }

  .main-404__actions {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    align-items: center;
  }

  @media (min-width: 640px) {
    .main-404__actions {
      flex-direction: row;
      justify-content: center;
    }
  }

  .main-404__button {
    min-width: 200px;
    padding: var(--spacing-md) var(--spacing-xl);
  }
</style>

{% schema %}
{
  "name": "404",
  "tag": "section",
  "class": "section-main-404",
  "settings": []
}
{% endschema %}

