        {%- endif -%}
      </div>

      <!-- Products Column -->
      <div class="footer__column">
        <h3 class="footer__heading">{{ section.settings.products_heading | default: 'PRODUCTS' }}</h3>
        <ul class="footer__links">
          {%- for block in section.blocks -%}
            {%- if block.type == 'product_link' -%}
              <li class="footer__link-item">
                <a href="{{ block.settings.url }}" class="footer__link" {{ block.shopify_attributes }}>
                  {{ block.settings.label }}
                </a>
              </li>
            {%- endif -%}
          {%- endfor -%}
        </ul>
      </div>

      <!-- Company Column -->
      <div class="footer__column">
        <h3 class="footer__heading">{{ section.settings.company_heading | default: 'COMPANY' }}</h3>
        <ul class="footer__links">
          {%- for block in section.blocks -%}
            {%- if block.type == 'company_link' -%}
              <li class="footer__link-item">
                <a href="{{ block.settings.url }}" class="footer__link" {{ block.shopify_attributes }}>
                  {{ block.settings.label }}
                </a>
              </li>
            {%- endif -%}
          {%- endfor -%}
        </ul>
      </div>

      <!-- Contact Column -->
      <div class="footer__column">
        <h3 class="footer__heading">{{ section.settings.contact_heading | default: 'CONTACT' }}</h3>
        <div class="footer__contact">
          {%- if section.settings.contact_address != blank -%}
            <div class="footer__contact-item">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" class="footer__contact-icon">
                <path d="M10 10C11.3807 10 12.5 8.88071 12.5 7.5C12.5 6.11929 11.3807 5 10 5C8.61929 5 7.5 6.11929 7.5 7.5C7.5 8.88071 8.61929 10 10 10Z" stroke="currentColor" stroke-width="2"/>
                <path d="M10 18C14 14 18 10.4183 18 7.5C18 4.58172 14.4183 2 10 2C5.58172 2 2 4.58172 2 7.5C2 10.4183 6 14 10 18Z" stroke="currentColor" stroke-width="2"/>
              </svg>
              <span>{{ section.settings.contact_address }}</span>
            </div>
          {%- endif -%}
          {%- if section.settings.contact_phone != blank -%}
            <div class="footer__contact-item">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" class="footer__contact-icon">
                <path d="M18 14V17C18 17.5304 17.7893 18.0391 17.4142 18.4142C17.0391 18.7893 16.5304 19 16 19C6.61 19 1 13.39 1 4C1 3.46957 1.21071 2.96086 1.58579 2.58579C1.96086 2.21071 2.46957 2 3 2H6C6.53043 2 7.03914 2.21071 7.41421 2.58579C7.78929 2.96086 8 3.46957 8 4V7C8 7.53043 7.78929 8 7.41421 8.41421C7.03914 8.82843 6.53043 9 6 9H4C4 12 7 15 10 15V13C10 12.4696 10.2107 11.9609 10.5858 11.5858C10.9609 11.2107 11.4696 11 12 11H15C15.5304 11 16.0391 11.2107 16.4142 11.5858C16.7893 11.9609 17 12.4696 17 13V16C17 16.5304 16.7893 17 16.4142 17.4142C16.0391 17.8284 15.5304 18 15 18H12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
              <a href="tel:{{ section.settings.contact_phone }}" class="footer__link">
                {{ section.settings.contact_phone }}
              </a>
            </div>
          {%- endif -%}
          {%- if section.settings.contact_email != blank -%}
            <div class="footer__contact-item">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" class="footer__contact-icon">
                <path d="M2 5L10 11L18 5M2 5H18V15H2V5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <a href="mailto:{{ section.settings.contact_email }}" class="footer__link">
                {{ section.settings.contact_email }}
              </a>
            </div>
          {%- endif -%}
        </div>
      </div>

    </div>

    <!-- Footer Bottom -->
    <div class="footer__bottom">
      <div class="footer__copyright">
        <p>&copy; {{ 'now' | date: '%Y' }} {{ section.settings.copyright_text | default: 'SPORTSLIVE DECALS. ALL RIGHTS RESERVED.' }}</p>
      </div>
      <div class="footer__legal-links">
        {%- if section.settings.privacy_policy_url != blank -%}
          <a href="{{ section.settings.privacy_policy_url }}" class="footer__legal-link">PRIVACY POLICY</a>
        {%- endif -%}
        {%- if section.settings.terms_url != blank -%}
          <a href="{{ section.settings.terms_url }}" class="footer__legal-link">TERMS OF SERVICE</a>
        {%- endif -%}
        {%- if section.settings.shipping_policy_url != blank -%}
          <a href="{{ section.settings.shipping_policy_url }}" class="footer__legal-link">SHIPPING POLICY</a>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-gray-900);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: var(--spacing-12) 0 var(--spacing-6);
    margin-top: var(--spacing-16);
  }

  .footer__content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-10);
    margin-bottom: var(--spacing-10);
  }

  @media (min-width: 768px) {
    .footer__content {
      grid-template-columns: 2fr 1fr 1fr 1.5fr;
      gap: var(--spacing-8);
    }
  }

  .footer__column {
    display: flex;
    flex-direction: column;
  }

  .footer__logo-text {
    font-family: var(--font-heading);
    font-size: var(--font-size-lg);
    font-weight: 700;
    color: var(--color-white);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin-bottom: var(--spacing-4);
    display: block;
  }

  .footer__heading {
    font-family: var(--font-heading);
    font-size: var(--font-size-base);
    font-weight: 600;
    color: var(--color-white);
    margin-bottom: var(--spacing-4);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .footer__text {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--color-chrome-silver);
    margin-bottom: var(--spacing-sm);
  }

  .footer__links {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer__link-item {
    margin-bottom: var(--spacing-sm);
  }

  .footer__link {
    font-size: var(--font-size-sm);
    color: var(--color-gray-300);
    text-decoration: none;
    transition: color var(--transition-base);
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .footer__link:hover {
    color: var(--color-gold);
  }

  .footer__contact {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .footer__contact-item {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-3);
    font-size: var(--font-size-sm);
    color: var(--color-gray-300);
    margin-bottom: var(--spacing-3);
  }

  .footer__contact-item:last-child {
    margin-bottom: 0;
  }

  .footer__contact-icon {
    flex-shrink: 0;
    margin-top: 2px;
    color: var(--color-gold);
  }

  .footer__social {
    display: flex;
    gap: var(--spacing-md);
    margin-top: var(--spacing-md);
  }

  .footer__social {
    display: flex;
    gap: var(--spacing-4);
    margin-top: var(--spacing-6);
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: var(--color-white);
    transition: color var(--transition-base);
  }

  .footer__social-link:hover {
    color: var(--color-gold);
  }

  .footer__newsletter-form {
    margin-top: var(--spacing-md);
  }

  .footer__newsletter-input-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  @media (min-width: 640px) {
    .footer__newsletter-input-wrapper {
      flex-direction: row;
    }
  }

  .footer__newsletter-input {
    flex: 1;
    padding: var(--spacing-sm);
    font-size: 0.9375rem;
    background-color: transparent;
    border: 1px solid var(--color-chrome-silver);
    color: var(--color-championship-white);
  }

  .footer__newsletter-button {
    white-space: nowrap;
  }

  .footer__newsletter-success {
    margin-top: var(--spacing-sm);
    color: var(--color-field-turf-green);
    font-size: 0.875rem;
  }

  .footer__newsletter-error {
    margin-top: var(--spacing-sm);
    color: var(--color-victory-red);
    font-size: 0.875rem;
  }

  .footer__bottom {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
    padding-top: var(--spacing-6);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      text-align: left;
    }
  }

  .footer__copyright {
    font-size: var(--font-size-sm);
    color: var(--color-gray-300);
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .footer__legal-links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-4);
    justify-content: center;
  }

  @media (min-width: 768px) {
    .footer__legal-links {
      justify-content: flex-end;
    }
  }

  .footer__legal-link {
    font-size: var(--font-size-xs);
    color: var(--color-gray-300);
    text-decoration: none;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    transition: color var(--transition-fast);
  }

  .footer__legal-link:hover {
    color: var(--color-gold);
  }

  .footer__payment-icons {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
    justify-content: center;
  }

  @media (min-width: 768px) {
    .footer__payment-icons {
      justify-content: flex-end;
    }
  }

  .footer__payment-icon {
    font-size: 0.75rem;
    color: var(--color-chrome-silver);
    padding: var(--spacing-xs) var(--spacing-sm);
    border: 1px solid var(--color-chrome-silver);
    border-radius: 2px;
  }
</style>

