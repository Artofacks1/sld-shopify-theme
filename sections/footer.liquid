{%- liquid
  assign newsletter_enabled = section.settings.newsletter_enable
-%}

<footer class="footer" role="contentinfo">
  <div class="container">
    <div class="footer__content">
      <!-- About Column -->
      <div class="footer__column">
        <h3 class="footer__heading">{{ section.settings.about_heading | default: 'About' }}</h3>
        <div class="footer__text">
          {{ section.settings.about_text }}
        </div>
        {%- if section.settings.show_social_icons -%}
          <div class="footer__social">
            {%- if settings.social_facebook_link != blank -%}
              <a href="{{ settings.social_facebook_link }}" class="footer__social-link" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
