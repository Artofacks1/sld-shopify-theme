{%- liquid
  assign collection = collections[section.settings.collection]
  assign title = section.settings.title
  assign label = section.settings.label | default: 'ELITE PRODUCTS'
  assign products_to_show = section.settings.products_to_show | default: 8
-%}

{%- if collection != blank and collection.products_count > 0 -%}
  <section class="featured-collection section">
    <div class="container">
      {%- if title != blank -%}
        <div class="featured-collection__header">
          <h2 class="featured-collection__title">{{ title }}</h2>
        </div>
      {%- endif -%}

      <div class="featured-collection__grid">
        {%- for product in collection.products limit: products_to_show -%}
          {%- liquid
            assign badge = blank
            if forloop.index == 1
              assign badge = 'BEST SELLER'
            elsif forloop.index == 4
              assign badge = 'NEW'
            elsif forloop.index == 7
              assign badge = 'PREMIUM'
            endif
          -%}
          {% render 'product-card', product: product, show_rating: true, show_description: true, badge_text: badge %}
        {%- endfor -%}
      </div>

      {%- if section.settings.show_view_all -%}
        <div class="featured-collection__footer">
          <a href="{{ collection.url | default: routes.all_products_collection_url }}" class="featured-collection__view-all button button--outline">
            {{ section.settings.view_all_text | default: 'VIEW ALL PRODUCTS' }}
          </a>
        </div>
      {%- endif -%}
    </div>
  </section>
{%- endif -%}

<style>
  .featured-collection {
    padding: var(--spacing-12) 0;
  }

  @media (min-width: 768px) {
    .featured-collection {
      padding: var(--spacing-16) 0;
    }
  }


  .featured-collection__header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
  }

  .featured-collection__title {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    color: var(--color-white);
    letter-spacing: -0.02em;
    margin: 0;
    text-transform: uppercase;
  }

  .featured-collection__title .gold-text {
    background: var(--gradient-gold-text);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .featured-collection__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
  }

  @media (max-width: 639px) {
    .featured-collection__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-md);
    }
  }

  .featured-collection__footer {
    text-align: center;
    margin-top: var(--spacing-xl);
  }

  .featured-collection__view-all {
    display: inline-block;
    padding: var(--spacing-4) var(--spacing-8);
    font-size: var(--font-size-base);
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    background: transparent;
    color: var(--color-white);
    border: 2px solid var(--color-gold);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
  }

  .featured-collection__view-all:hover {
    background: var(--color-gold);
    color: var(--color-gray-900);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
</style>

{% schema %}
{
  "name": "Featured Collection",
  "tag": "section",
  "class": "section-featured-collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "CHAMPIONSHIP GRADE"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 16,
      "step": 2,
      "default": 8,
      "label": "Products to show"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "'View all' button text",
      "default": "VIEW ALL PRODUCTS"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}

