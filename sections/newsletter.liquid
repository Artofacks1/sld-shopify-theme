{%- liquid
  assign heading = section.settings.heading | default: 'JOIN THE ELITE'
  assign description = section.settings.description
  assign placeholder = section.settings.placeholder | default: 'ENTER YOUR EMAIL'
  assign button_text = section.settings.button_text | default: 'SUBSCRIBE'
  assign disclaimer = section.settings.disclaimer
-%}

<section class="newsletter section">
  <div class="container">
    <div class="newsletter__content">
      <div class="newsletter__icon">
        <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M8 12H40C42.2091 12 44 13.7909 44 16V32C44 34.2091 42.2091 36 40 36H8C5.79086 36 4 34.2091 4 32V16C4 13.7909 5.79086 12 8 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M44 16L24 28L4 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
      
      <h2 class="newsletter__heading">{{ heading }}</h2>
      
      {%- if description != blank -%}
        <p class="newsletter__description">{{ description }}</p>
      {%- endif -%}

      {%- form 'customer', class: 'newsletter__form' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="newsletter__input-wrapper">
          <input
            type="email"
            name="contact[email]"
            class="newsletter__input"
            value="{% if customer %}{{ customer.email }}{% endif %}"
            placeholder="{{ placeholder }}"
            aria-label="{{ placeholder }}"
            required
          >
          <button type="submit" class="newsletter__button">
            {{ button_text }}
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M4 10H16M16 10L12 6M16 10L12 14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>
        {%- if disclaimer != blank -%}
          <p class="newsletter__disclaimer">{{ disclaimer }}</p>
        {%- endif -%}
        {%- if form.posted_successfully? -%}
          <p class="newsletter__success">
            Thanks for subscribing!
          </p>
        {%- endif -%}
        {%- if form.errors -%}
          <p class="newsletter__error">
            {{ form.errors | default_errors }}
          </p>
        {%- endif -%}
      {%- endform -%}
    </div>
  </div>
</section>

<style>
  .newsletter {
    padding: var(--spacing-12) 0;
    background: rgba(31, 41, 55, 0.4);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  @media (min-width: 768px) {
    .newsletter {
      padding: var(--spacing-16) 0;
    }
  }

  .newsletter__content {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .newsletter__icon {
    width: 64px;
    height: 64px;
    margin: 0 auto var(--spacing-6);
    color: var(--color-white);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .newsletter__heading {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    color: var(--color-white);
    letter-spacing: -0.02em;
    margin-bottom: var(--spacing-4);
    text-transform: uppercase;
  }

  .newsletter__description {
    font-size: var(--font-size-base);
    color: var(--color-gray-300);
    line-height: 1.7;
    margin-bottom: var(--spacing-8);
  }

  .newsletter__form {
    width: 100%;
  }

  .newsletter__input-wrapper {
    display: flex;
    gap: var(--spacing-3);
    margin-bottom: var(--spacing-4);
  }

  .newsletter__input {
    flex: 1;
    padding: var(--spacing-4) var(--spacing-5);
    font-size: var(--font-size-base);
    background: rgba(17, 24, 39, 0.6);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    color: var(--color-white);
    transition: all var(--transition-base);
  }

  .newsletter__input:focus {
    outline: none;
    border-color: var(--color-gold);
    box-shadow: 0 0 0 4px rgba(255, 215, 0, 0.1);
  }

  .newsletter__input::placeholder {
    color: var(--color-gray-300);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: var(--font-size-sm);
  }

  .newsletter__button {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-4) var(--spacing-6);
    font-size: var(--font-size-base);
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    background: var(--gradient-primary);
    color: var(--color-gray-900);
    border: 2px solid var(--color-gray-900);
    border-radius: var(--radius-lg);
    cursor: pointer;
    transition: all var(--transition-base);
    white-space: nowrap;
  }

  .newsletter__button:hover {
    background: var(--gradient-primary-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .newsletter__disclaimer {
    font-size: var(--font-size-xs);
    color: var(--color-gray-300);
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .newsletter__success {
    margin-top: var(--spacing-4);
    color: var(--color-gold);
    font-size: var(--font-size-sm);
  }

  .newsletter__error {
    margin-top: var(--spacing-4);
    color: #ef4444;
    font-size: var(--font-size-sm);
  }
</style>

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "section-newsletter",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "JOIN THE ELITE"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Subscribe for exclusive deals, new product launches, and insider access to championship-grade decals before anyone else."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Email placeholder",
      "default": "ENTER YOUR EMAIL"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "SUBSCRIBE"
    },
    {
      "type": "text",
      "id": "disclaimer",
      "label": "Disclaimer text",
      "default": "NO SPAM. UNSUBSCRIBE ANYTIME. CHAMPIONS ONLY."
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}

